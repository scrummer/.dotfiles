}

# DB helper
clean-definer() {
  if [[ $# -eq 0 ]]; then
    echo "Please specify the file you want to clean."
    return;
  fi;

  file=$1;

  if [[ -f $file ]]; then
    content=$(LANG=UTF8 LC_ALL=UTF8 LC_CTYPE=UTF8 sed -e 's/DEFINER[ ]*=[ ]*[^*]*\*/\*/' < "$file");
    echo "$content" > "$file";
    printf "\nSuccessfully cleaned up definers!\n";
    return;
  else
    echo "Given file does not exist!";
    return;
  fi;  
}
